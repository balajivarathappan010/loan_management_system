    <div class="form-container">
        <form action="/post/admin" method="POST">
            <h1>Welcome to admin page</h1>
            {{#if data}}
            <div class="table-content">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Account number</th>
                        <th>Amount</th>
                        <th>Interest</th>
                        <th>Tenure</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.accountno}}</td>
                        <td>{{this.amount}}</td>
                        <td>{{this.interest}}</td>
                        <td>{{this.tenure}}</td>
                        <td class="{{#if_eq this.status "approved"}}correct{{else}}incorrect{{/if_eq}}">{{this.status}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            </div>
            {{else}}
            <p>No data found</p>
            {{/if}}
        </form>
    </div>

